<% if admin_signed_in? %>
<% else %>

<div class="side">
  <% if user_signed_in? %>
        <div class="side-image">
          <% if current_user.plofile_image.attached? %>
            <%= link_to user_path(current_user.id) do %>
              <%= image_tag current_user.plofile_image, class: "plofile-image" %>
            <% end %>
          <% else %>
            <%= link_to user_path(current_user.id) do %>
              <%= image_tag 'no_image.jpg', class: "no_image" %>
            <% end %>
          <% end %>
        </div>

        <div class="side-user">
          <div class="side-user-name"><%= link_to current_user.name, user_path(current_user.id) %></div>
          <div class="side-user-mname"><%= current_user.maker_genre.mname %></div>
          <div class="side-user-car"><%= current_user.car_name %></div>
        </div>

        <div class="side-menu">
          <div class="side-new-carpost"><%= link_to "新規投稿", new_car_post_path %></div>
          <div class="side-logout"><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></div>
        </div>
   <% else %>
        <div class="side-image">
          <%= image_tag 'no_image.jpg', class: "no_image" %>
        </div>

        <div class="side-user">
          <div class="side-user-name">ログイン</div>
          <div class="side-user-mname">されていません</div>
          <div class="side-user-car"></div>
        </div>

        <div class="side-menu">
          <div class="side-new-carpost"><%= link_to "新規登録", new_user_registration_path %></div>
          <div class="side-logout"><%= link_to "ログイン", new_user_session_path %></div>
        </div>
   <% end %>
 </div>

 <% end %>