<!DOCTYPE html>
<html>
  <head>
    <title>Car</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"/>
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick-theme.css">

    <script src="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.7.1/js/lightbox.min.js" type="text/javascript"></script>

    <link href="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.7.1/css/lightbox.css" rel="stylesheet">

    <script type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>

  </head>

  <div class="body">


    <div class="header">
      <div class="container">

        <div class="logo_area">
          <div class="logo">
            <%= link_to "Cars!", root_path %>
            <span style="color: #fff;"><i class="fa-solid fa-car-burst"></i></span>
          </div>
        </div>

      <div class="menu-area">
        <nav class="menu">
          <ul>
            <% if user_signed_in? %>
            　<li><%= link_to "MakerGenre", maker_genres_path %></li>
              <li><%= link_to "PartsGenre", parts_genres_path %></li>
              <li><%= link_to "users", users_path %> <span style="color: #fff;"><i class="fa-solid fa-users"></i></span></li>
              <li><%= link_to "CarPost", car_posts_path %> <span style="color: #fff;"><i class="fa-solid fa-truck"></i></span></li>
              <li><%= link_to "About", about_path %></li>
            <% elsif admin_signed_in? %>
              <li><%= link_to "管理者ログアウト", destroy_admin_session_path, method: :delete %></li>
              <li><%= link_to "maker_genre", admin_maker_genres_path %></li>
              <li><%= link_to "parts_genre", admin_parts_genres_path %></li>
            <% else %>
              <li><%= link_to "About", about_path %></li>
              <li><%= link_to "新規登録", new_user_registration_path %> <span style="color: #fff;"><i class="fa-solid fa-play"></i></span></li>
              <li><%= link_to "ログイン", new_user_session_path %> <span style="color: #fff;"><i class="fa-solid fa-right-to-bracket"></i></span></li>
              <li><%= link_to "管理者ログイン", new_admin_session_path %></li>
            <% end %>
          </ul>
        </nav>

        <div class="search-box">
          <%= search_form_for @search, url: car_posts_path do |f| %>
            <%= f.text_field :title_or_message_or_parts_genre_pname_or_user_name_or_user_car_name_or_user_maker_genre_mname_cont %>
            <%= f.submit 'search' %>
          <% end %>
        </div>
      </div>

      </div>
    </div>

    <div class="header-box"></div>

    <div class="main">



      <%= yield %>

    </div>

  </div>

  </body>
</html>
