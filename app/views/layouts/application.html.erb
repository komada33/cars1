<!DOCTYPE html>
<html>
  <head>
    <title>Car</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% if user_signed_in? %>
        <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
        <%= link_to "users", users_path %>
        <%= link_to "CarPost", car_posts_path %>
        <%= link_to "新規投稿", new_car_post_path %>
      <% elsif admin_signed_in? %>
        <%= link_to "管理者ログアウト", destroy_admin_session_path, method: :delete %>
        <%= link_to "maker_genre", admin_maker_genres_path %>
        <%= link_to "parts_genre", admin_parts_genres_path %>
      <% else %>
        <%= link_to "ホーム", root_path %>
        <%= link_to "新規登録", new_user_registration_path %>
        <%= link_to "ログイン", new_user_session_path %>
        <%= link_to "管理者ログイン", new_admin_session_path %>
      <% end %>
    </header>
    <%= yield %>
  </body>
</html>
