<div class="home">

  <p>New Car News!!</p>

  <div class="new_post">
    <ul>
    <% @carposts.each do |carpost| %>

      <li><%= carpost.created_at.strftime('%Y/%m/%d %H:%M:%S') %></li>
      <li>
        <%= link_to user_path(carpost.user.id) do %>
          <%= image_tag carpost.user.get_plofile_image(50,50) %>
        <% end %>
        <%= link_to carpost.user.name, user_path(carpost.user.id) %>
      </li>

      <li>
        <%= link_to car_post_path(carpost.id) do %>
          <%= image_tag carpost.get_car_image(200,200) %>
        <% end %>
      </li>
      <li><%= link_to carpost.title, car_post_path(carpost.id) %></li>

    <% end %>
    </ul>
  </div>

</div>
