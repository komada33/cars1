<%= render partial: 'layouts/sidebar' %>

<div class="show-mgenre">

  <h2><%= @mgenre.mname %></h2>

    <% @mgenres.each do |user| %>

      <div class="show-maker-genres">

        <div class="show-maker-genres-user">
          <%= link_to user_path(user.id) do %>
            <%= image_tag user.plofile_image, class: "plofile-image" %>
          <% end %>
          <div class="show-maker-genres-right">
            <div class="show-maker-genres-name"><%= user.name %></div>
            <div class="show-maker-genres-car"><%= user.maker_genre.mname %>. <%= user.car_name %></div>
          </div>
          <% if user.id == current_user.id %>
            <% else %>
              <div class="show-mgenre-follow">
                <% if current_user.following(user) %>
                  <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: "btn" %>
                <% else %>
                  <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn" %>
                <% end %>
              </div>
          <% end %>


        </div>

      </div>

    <% end %>

</div>