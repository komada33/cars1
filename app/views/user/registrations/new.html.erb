
<div class="form">

  <h2>Sign Up!</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "user/shared/error_messages", resource: resource %>

  <div class="form-item">
    <div class="form-item-label">
      <%= f.label :name, "ユーザーネーム" %>
    </div>
    <div class="form-item-content">
      <%= f.text_field :name, placeholder: "ユーザーネーム" %>
    </div>
  </div>

  <div class="form-item">
    <div class="form-item-label">
      <%= f.label :maker_genre_id, "メーカー" %>
    </div>
    <div class="form-item-content">
      <%= f.collection_select :maker_genre_id, MakerGenre.all, :id, :mname, { include_blank: "選択して下さい" }, {class: "select"} %>
    </div>
  </div>

  <div class="form-item">
    <div class="form-item-label">
      <%= f.label :car_name, "車名" %>
    </div>
    <div class="form-item-content">
      <%= f.text_field :car_name, placeholder: "車名" %>
    </div>
  </div>

  <div class="form-item">
    <div class="form-item-label">
      <%= f.label :plofile_image, "ユーザーアイコンを選択", class: "btn" %>
      <%= f.file_field :plofile_image %>
    </div>
  </div>

  <div class="form-item">
    <div class="form-item-label">
      <%= f.label :email, "Eメール" %>
    </div>
    <div class="form-item-content">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Eメール" %>
    </div>
  </div>

  <div class="form-item">
    <div class="form-item-label">
      <%= f.label :password, "パスワード" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
    </div>
    <div class="form-item-content">
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
  </div>

  <div class="form-item">
    <div class="form-item-label">
      <%= f.label :password_confirmation, "パスワード再入力" %>
    </div>
    <div class="form-item-content">
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
  </div>

  <div class="form-submit">
   <%= f.submit "新規登録" %>
  </div>
  <% end %>
</div>