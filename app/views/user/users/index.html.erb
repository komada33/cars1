
<div class="index-users">

  <h2>Users!</h2>

    <% @users.each do |user| %>

      <div class="index-user">
        <div class="index-user-show">
          <div class="user-image">
            <%= link_to user_path(user.id) do %>
              <%= image_tag user.get_plofile_image(50,50), class: "plofile-image" %>
            <% end %>
          </div>
          <div class="index-user-right">
            <div class="index-user-name"><%= link_to user.name, user_path(user.id) %></div>
            <div class="index-user-car"><%= link_to user.maker_genre.mname, user_path(user.id) %>. <%= link_to user.car_name, user_path(user.id) %></div>
          </div>

          <div class="index-user-follow">
              <% if current_user.following(user) %>
                <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: "btn" %>
              <% else %>
                <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn" %>
              <% end %>
          </div>

        </div>


      </div>
    <% end %>
</div>
