
<div class="show-user">

  <div class="show-user-content">

    <div class="show-user-box">

      <%= link_to user_path(@user.id) do %>
        <%= image_tag @user.get_plofile_image(50,50), class: "plofile-image" %>
      <% end %>

      <div class="show-user-right">
        <div class="show-user-name"><%= link_to @user.name, user_path(@user.id) %></div>
        <div class="show-user-car"><%= link_to @user.maker_genre.mname, user_path(@user.id) %>. <%= link_to @user.car_name, user_path(@user.id) %></div>
      </div>

      <div class="show-user-follow">
        <% if @user.id == current_user.id %>
          <div class="show-user-edit">
            <%= link_to "User Edit", edit_user_path(@user.id), class: "edit-btn" %>
          </div>
          <% else %>
            <% if current_user.following(@user) %>
              <%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete %>
            <% else %>
              <%= link_to "フォローする", user_relationships_path(@user.id), method: :post %>
            <% end %>
        <% end %>

      </div>

    </div>

  </div>

  <div class="show-user-carposts">
    <h2>投稿一覧</h2>
  </div>

  <% @carposts.each do |carpost| %>
  <div class="show-user-carpost">

    <div class="show-user-carpost-text">
      <div class="show-user-genre">
        ジャンル:<%= carpost.parts_genre.pname %>
      </div>
      <div class="show-user-title">
        <%= carpost.title %>
      </div>
    </div>
    <div class="show-user-carpost-image">
      <%= link_to car_post_path(carpost.id) do %>
        <%= image_tag carpost.get_car_image(300,300), class: "car-image" %>
      <% end %>
    </div>

  </div>
  <% end %>

</div>